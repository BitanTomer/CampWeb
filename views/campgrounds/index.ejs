<%- include ('../partials/header')%>

<div class="fill">
    <div class="container">
        <header>
            <div class="container">
                <div class="blank"></div>
                <h1 class="display-4">Welcome to YelpCamp!</h1>
                <p class="lead font-weight-normal">view our hand-picked campground from all over the world</p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new"><i class="fas fa-plus"></i> Add New Campground</a>
            </div>
        </header>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="text-center mb-5 font-weight-normal">Our Most Popular Campgrounds</h3>
        </div>
    </div>
    <div class="row text-center">
        <%campgrounds.forEach((campground) =>{%>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail card mb-4">
                    <img src=<%= campground.img %>+ class="max-image">
                    <h6 class="caption-full font-weight-light"><%=campground.name %></h6>
                    <p><a href="/campgrounds/<%=campground._id%>" class="btn btn-primary btn-sm">More Info</a></p>
                </div>
            </div>
        <% }) %>
    </div>
</div>
</div>
<%- include ('../partials/footer')%>