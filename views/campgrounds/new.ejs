<%- include ('../partials/header') %>

<div class="container">
    <h1 class="mb-5" style="text-align: center"> Create new Campground</h1>
    <div class="row">
        <div style="margin: 0 auto">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="name" name="campName">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" placeholder="price" name="campPrice" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="imgUrl" name="campImg">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="description" name="campDesc">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">submit</button>
            </div>
        </form>
        <a class="btn btn-warning btn-block" href="/campgrounds">Go back</a>

        </div>
    </div>
</div>
<%- include ('../partials/footer')%>